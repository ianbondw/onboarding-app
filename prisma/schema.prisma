// prisma/schema.prisma

// ---------- Generator ----------
generator client {
  provider = "prisma-client-js"
}

// ---------- Datasource ----------
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ---------- Enums ----------
enum OnboardingStatus {
  DRAFT
  SUBMITTED
}

enum RiskTolerance {
  Low
  Medium
  High
}

// ---------- Models ----------
model OnboardingSession {
  id          String           @id @default(cuid())
  token       String           @unique
  status      OnboardingStatus @default(DRAFT)
  submittedAt DateTime?
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  // inverse of 1–1 relation
  client      Client?
}

model Client {
  id                   String           @id @default(cuid())
  email                String           @unique
  fullName             String
  ssn                  String
  dob                  DateTime

  // Money-like values: Prisma Decimal → Postgres NUMERIC (no @db needed)
  netWorth             Decimal
  income               Decimal
  investableAssets     Decimal

  riskTolerance        RiskTolerance
  termsAccepted        Boolean
  kycCitizenship       String?
  kycEmploymentStatus  String?
  kycSourceOfFunds     String?

  // 1–1 link to session (FK lives on Client)
  onboardingSessionId  String?          @unique
  onboardingSession    OnboardingSession? @relation(fields: [onboardingSessionId], references: [id])

  createdAt            DateTime         @default(now())
  updatedAt            DateTime         @updatedAt
}